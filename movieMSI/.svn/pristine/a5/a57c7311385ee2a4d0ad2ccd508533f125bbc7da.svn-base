/* 登录样式 */

.loginAll,
.registerAll {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 800px;
  position: relative;
  background: url("../imagesAll/girl.jpg");
  background-size: 100%;
}

.loginAll a {
  color: green;
}

.loginAll #loginLogo,
.registerAll #registerLogo {
  height: 80px;
  border-radius: 40px;
}

.loginAll .loginlittle,
.registerAll .registerlittle {
  background: rgba(33, 33, 33, 0.5);
  width: 400px;
  padding: 20px;
  height: 400px;
  box-sizing: border-box;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.loginAll .loginlittle span,
.registerAll .registerlittle span {
  font-size: 25px;
  color: #ef4238
}

/* 修改用户的窗口样式 */

.changeUser {
  margin: 0 auto;
  background-color: antiquewhite;
  width: 400px;
  height: 300px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.changeUser span {
  font-size: 20px;
}

.changeUser p {
  font-size: 30px;
}

