const mongoose = require("mongoose");



//新增排片选座
module.exports.addselect = async (data) => {
    // console.log("++++++++++++",data);
    // let [arr] = data;
    // console.log(arr);
    // console.log(data.ProjectionsId);
    const xx = await mongoose.model("seatModel").find({
        ProjectionId: data.ProjectionsId
    })
    // console.log(xx);
    for (let i = 0; i <= xx.length - 1; i++) {
        let xuanzuo = {
            chipId: data._id,
            seatsId: xx[i]._id,
            state: false,
        }
        const data1 = await mongoose.model("selectModel").create(xuanzuo);
        // console.log(data1);
    }
}



//获取
module.exports.getall = async ({
    chipId
}) => {
    const data = await mongoose.model("selectModel")
        .find({
            chipId
        })
        .populate("seatsId");
    return data;
}



module.exports.changeSate = async (a) => {
    // console.log(_id);
    
    if(a._id.length>4){
        const data = await mongoose.model("selectModel")
        .update({a},{state:true})
        return data;
    }
    else{
        for(let i=0;i<a._id.length;i++){
            const data = await mongoose.model("selectModel")
            .update({_id:a._id[i]},{state:true})
           
        }
        return data; 
    }
}
