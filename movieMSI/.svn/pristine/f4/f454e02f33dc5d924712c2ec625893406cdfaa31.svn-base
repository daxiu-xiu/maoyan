export default class Scrm_addhall {
    constructor() {
        this.pageData = {
            // 当前页
            currentPage: 1,
            // 每页显示条数
            pageSize: 5,
            // 总条数
            totalCount: 0,
            // 总页数
            totalPages: 0,
            // 放映厅数据
            Projections: []
        }
        this.render();
        this.biaoge();
        this.getshuju();
        this.handel();
        this.addstyle();
        $.parser.parse();
    }
    render() {
        const tingHTML =
            `
        <div id="scrm_zhenti">

       <div id ="scrm_zhenti1">
        <div class="easyui-panel" title="新增放映厅" style="width:400px;padding:30px" data-options="cls:'loginPanel'">
            
            <div style="margin-bottom: 20px;text-align: right;">
                <input id="scrm_cc" name="dept" data-options="label:'选择影院 :',prompt:'所属影院',panelHeight:'auto'"
                    style="width:100%">
            </div>

            <div style="margin-bottom: 20px">
                <input id="scrm_name" class="easyui-textbox" data-options="required: 'true',prompt:'必填',label:'放映厅名 :'"
                    style="width:100%">
            </div>

            <div style="margin-bottom: 20px;text-align: right;">
                <a id="scrm_btn" href="#" class="easyui-linkbutton" data-options="width:256,iconCls:'icon-add'">确认新增</a>
            </div>

        </div>


        <div id="scrm_studentsDgWrap" style="width: 732px">
            <table id="scrm_studentsDg"></table>
            <div id="scrm_pp" style="background:#efefef;border:1px solid #ccc;"></div>
        </div>
        

        <div id="dd"></div>  
        <div>
    </div>
        `
        $("#rightPart").html(tingHTML);
    }
    biaoge() {
        //表格
        $('#scrm_studentsDg').datagrid({
            // data: [
            //     { _id: "1", name: "哈哈", gender: "嘻嘻嘻" },
            //     { _id: "2", name: "哈哈", gender: "嘻嘻嘻" }
            // ],
            singleSelect: "false",
            columns: [[

                { field: '_id', title: '编号', width: "180px", align: 'center' },
                { field: 'scrm_cc', title: '影院名', width: "200px", align: 'center' },
                { field: 'scrm_name', title: '已有放映厅', width: "150px", align: 'center' },
                {
                    field: 'handle', title: '操作', width: '200px', align: 'center',
                    formatter: function (value, row, index) {


                        return `
                    <a href="#" class="easyui-linkbutton updateBtn" data-id="${row._id}">查看座位</a>
                    <a href="#" class="easyui-linkbutton removeBtn" data-id="${row._id}">删除放映厅</a>
                `
                    }
                }
            ]],
            onLoadSuccess: function () {
                $.parser.parse('#studentsDgWrap'); //重新解析
            }
        });

    }
    //渲染所有表格数据
    getshuju() {
        $.ajax({
            url: "/api/Projections",
            post: "get",
            data: {
                currentPage: this.pageData.currentPage,
                pageSize: this.pageData.pageSize
            },
            success: (msg) => {
                this.pageData = msg;
                $('#scrm_studentsDg').datagrid({ data: this.pageData.Projections })


                //分页
                $('#scrm_pp').pagination({
                    //总页数
                    total: this.pageData.totalCount - 0,
                    //当前每页显示条数
                    pageSize: this.pageData.pageSize - 0,
                    //设置可以选择显示条数的数量
                    pageList: [1, 2, 3, 5],
                    //当前页
                    pageNumber: this.pageData.currentPage - 0,
                    displayMsg: " 当前第一条数据 {from} 到最后一条页数 {to} 总数据为: {total} "
                });
            }
        })
    }
    //事件
    handel() {

        $('#scrm_pp').pagination({
            onSelectPage: (pageNumber, pageSize) => {
                this.pageData.currentPage = pageNumber,
                    this.pageData.pageSize = pageSize,
                    this.getshuju();
            }
        });

        //下拉
        $('#scrm_cc').combobox({
            // url: '/api/class',
            //method设置请求类型，默认为post
            // method: "get",
            //valueField 指的是通过什么数据去获取
            valueField: '',
            //下来列表的文本内容 
            textField: '',

        });

        //随便先给下拉一个默认值
        $('#scrm_cc').combobox('setValue', '太平洋');

        //新增
        $("#scrm_btn").click(() => {
            const scrm_name = $("#scrm_name").textbox("getValue");
            const scrm_cc = $("#scrm_cc").combobox("getValue");
            $.ajax({
                url: "/api/Projections",
                type: "post",
                data: { scrm_cc, scrm_name },
                success: (msg) => {
                    if (msg) {
                        $.messager.alert('新增放映厅', '新增成功');
                        $("#scrm_name").textbox("setValue", "");
                        this.getshuju();
                    }
                }
            })
        })

        //点击删除
        $("#scrm_studentsDgWrap").on("click", ".removeBtn", (e) => {
            $.messager.confirm('删除放引厅', '您确认想要删除此放映厅吗？', (r) => {
                if (r) {
                    const _id = e.target.dataset.id;
                    console.log(_id);
                    $.ajax({
                        url: `/api/Projections/${_id}`,
                        type: "delete",
                        success: (msg) => {
                            if (msg) {
                                // $.messager.alert('删除放映厅', '删除成功');
                                this.getshuju();
                            }
                        }
                    })
                }
            });
        })


        //弹窗
        $("#scrm_studentsDgWrap").on("click", ".updateBtn", (e) => {
            $('#dd').dialog({
                title: 'My Dialog',
                width: 400,
                // height: 200,
                // closed: false,
                // cache: false,
                // href: 'get_content.php',    
                modal: true
            });
            // $('#dd').dialog('refresh', 'new_content.php'); 
            let xx = "";
            let jj = "";
            for (let j = 1; j <= 10; j++) {
                jj +=
                    `
                <li class="paibiao1">o</li>
                `
            }
            for (let i = 1; i <= 10; i++) {
                xx +=
                    `
           <ul class="paibiao">
                ${jj}
           </ul>
            `
            }

            $("#dd").html(xx)
            this.addstyle();
        })
    }



    //样式
    addstyle() {

        $("#scrm_zhenti").css({
            // "width": "800px",
            "margin": "auto",
            "display": "flex",
            "flex-direction": "column",
            "align-items": "center",
            "background-image": "url('../../../imagesAll/0121705b21dce1a80121bbecac6fa8.jpg')"
        })

        $(".paibiao").css({
            'display': 'flex',
            'list-style': "none",
            'justify-content': 'space-between'
        })

        $(".paibiao1").css({
            'margin-top': '0',
        })

        $("#scrm_zhenti1").css({
            "opacity": "0.2",
            "display": "flex",
            "flex-direction": "column",
            "align-items": "center",
        })
        $("#scrm_zhenti1").hover(
            //移入
            function () {
                $("#scrm_zhenti1").css({
                    "opacity": "1",
                })

            },
            //移出
            function () {
                $("#scrm_zhenti1").css({
                    "opacity": "0",
                })
            }
        )
        $(".easyui-panel").css({
            "background-color": "yellow"
        })
        $(".datagrid-view2").css({
            "background-color": "aquamarine"
        })
        $("#scrm_pp").css({
            "background-color": "skyblue"
        })
    }

}